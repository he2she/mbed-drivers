    "type": "git"
  },
  "homepage": "https://github.com/ARMmbed/mbed-drivers",
  "licenses": [
    {
      "url": "https://spdx.org/licenses/Apache-2.0",
      "type": "Apache-2.0"
    }
  ],
  "extraIncludes": [
    "mbed"
  ],
  "dependencies": {
    "mbed-hal": "ARMmbed/mbed-hal#v1.3.0",
    "cmsis-core": "ARMmbed/cmsis-core#v1.2.0",
